---
import Layout from "./Layout.astro";
import Header from "../components/Example-Header.astro";
import Warning from "../components/Warning.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<Layout title={title} enableViewTransitionMetaTag={true}>
  <Warning />
  <Header exampleNo={5} vertical={true} />
  <main>
    <slot />
  </main>
</Layout>

<style>
  main {
    view-transition-name: main;
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      scale: 0.9;
      transform: translate(0, -100%);
    }

    to {
      opacity: 1;
      scale: 1;
      transform: translate(0);
    }
  }

  @keyframes slideOut {
    from {
      opacity: 1;
      scale: 1;
      transform: translate(0);
    }

    to {
      opacity: 0;
      scale: 0.9;
      transform: translate(0, 100%);
    }
  }

  /* New stuff coming in */
  :root::view-transition-new(main) {
    animation: slideIn 0.3s ease-in forwards;
    width: fit-content;
    z-index: 1;
  }

  /* Old stuff coming out */
  :root::view-transition-old(main) {
    animation: slideOut 0.2s ease-out forwards;
    width: fit-content;
    z-index: 1;
  }
</style>
